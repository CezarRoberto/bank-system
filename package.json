{
  "name": "bank-system",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint:staged": "lint-staged",
    "lint": "eslint . --fix",
    "build": "tsc && tsc-alias",
    "start": "node dist/shared/infra/http/server.js",
    "dev": "cross-env NODE_ENV=dev tsnd -r tsconfig-paths/register --exit-child --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts | pino-pretty -c -l -t",
    "prepare": "husky install",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./tests/jest-e2e.config.ts --detectOpenHandles --runInBand --forceExit",
    "test": "jest --runInBand --detectOpenHandles --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@prisma/client": "3.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-async-errors": "^3.1.1",
    "google-auth-library": "^8.5.2",
    "helmet": "^5.1.0",
    "prisma": "^3.13.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.4.0",
    "tsyringe": "^4.6.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@eslint/create-config": "^0.4.2",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.25",
    "@swc/jest": "^0.2.24",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.3.1",
    "jest-environment-node": "27.5.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.1.0",
    "pg": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
